FROM public.ecr.aws/docker/library/golang:1.24.11@sha256:54528d189affe7ce60840cad093d53360705d47d71ea74d62eef72c476242fe9

RUN apt-get update && apt-get install -y --no-install-recommends \
    unzip \
    curl \
    jq \
    && curl "https://awscli.amazonaws.com/awscli-exe-linux-$(uname -m).zip" -o "awscliv2.zip" \
    && unzip awscliv2.zip \
    && ./aws/install
